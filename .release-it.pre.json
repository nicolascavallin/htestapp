{
  "github": {
    "release": false,
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "version_string=$(echo \"${version}\" | sed -E 's/([0-9]+\\.[0-9]+\\.[0-9]+).*$/\\1/') && yarn react-native-version --never-amend"
  },
  "git": {
    "push": true,
    "commit": true,
    "commitMessage": "prerelease: v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  }
}
