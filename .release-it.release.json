{
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "yarn react-native-version --never-amend",
    "after:release": "gh pr create --base develop --head release/${version} --title 'Release ${version}' --body '${changelog}'"
  },
  "git": {
    "push": true,
    "commit": true,
    "tag": true,
    "commitMessage": "release: v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "gitRawCommitsOpts": {
        "from": "15.0.1"
      },
      "context": {
        "linkCompare": true,
        "previousTag": "15.0.1"
      },
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "test",
            "section": "Tests"
          },
          {
            "type": "",
            "section": "Other PRs"
          },
          {
            "type": "prerelease",
            "hidden": true
          },
          {
            "type": "release",
            "hidden": true
          },
          {
            "type": "chore",
            "hidden": true
          }
        ]
      }
    }
  }
}
