{
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "yarn react-native-version --never-amend",
    "after:release": "version_string=$(echo \"${version}\" | sed -E 's/([0-9]+\\.[0-9]+\\.[0-9]+).*$/\\1/')"
  },
  "git": {
    "push": true,
    "commit": true,
    "tag": true,
    "commitMessage": "release: v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "",
            "section": "Other PRs"
          },
          {
            "type": "prerelease",
            "hidden": true
          },
          {
            "type": "release",
            "hidden": true
          }
        ]
      }
    }
  }
}
