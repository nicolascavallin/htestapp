{
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "yarn react-native-version --never-amend",
    "after:release": "gh pr create --base develop --head release/${version} --title 'Release ${version}' --body 'Release ${version}\n${changelog}'"
  },
  "git": {
    "push": true,
    "commit": true,
    "tag": true,
    "commitMessage": "release: v${version}"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
