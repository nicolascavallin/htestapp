{
  "github": {
    "release": true,
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "yarn react-native-version --never-amend",
    "after:release": "version_string=$(echo \"${version}\" | sed -E 's/([0-9]+\\.[0-9]+\\.[0-9]+).*$/\\1/') && gh pr create --base develop --head release/$version_string --title 'Release ${version}' --body 'Release ${version}'"
  },
  "git": {
    "push": true,
    "commitMessage": "Release v${version}",
    "tag": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      }
    }
  }
}
