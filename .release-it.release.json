{
  "github": {
    "release": true,
    "tokenRef": "GH_TOKEN"
  },
  "hooks": {
    "after:bump": "yarn react-native-version --never-amend",
    "after:release": "version_string=$(echo \"${version}\" | sed -E 's/([0-9]+\\.[0-9]+\\.[0-9]+).*$/\\1/') && gh pr create --base develop --head release/$version_string --title 'Release ${version}' --body 'Release ${version}' && gh pr create --base master --head release/$version_string --title 'Release ${version}' --body 'Release ${version}'"
  },
  "git": {
    "push": true,
    "commitMessage": "release: Release v${version}",
    "tag": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "section": "Chore"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "",
            "section": "Others"
          },
          {
            "type": "prerelease",
            "hidden": true
          },
          {
            "type": "release",
            "hidden": true
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}
